<% layout('layouts/boilerplate')%> <%- include("../partials/flash") %>
<h1>Login</h1>
<form action="/auth/login" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
            class="form-control"
            type="text"
            id="username"
            name="username"
            required
        />
        <div class="invalid-feedback">Username required</div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
            class="form-control"
            type="password"
            id="password"
            name="password"
            required
        />
        <div class="invalid-feedback">Password required</div>
    </div>
    <button class="btn btn-success">Login</button>
</form>

<script src="/javascript/forms-validation.js"></script>
