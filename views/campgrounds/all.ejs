<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Campgrounds</title>
    </head>

    <body>
        <h1>All Campgrounds</h1>
        <h3><a href="/campgrounds/create">Create a campground</a></h3>
        <ul>
            <% for( let campground of campgrounds ) { %>
            <li>
                Name: <%= campground.name %> | Price: <%= campground.price %> |
                Description: <%= campground.description %> | Location: <%=
                campground.location %> |
                <a href="/campgrounds/<%= campground._id %>">Details</a> |
                <a href="/campgrounds/edit<%= campground._id %>">Edit</a>
            </li>
            <% } %>
        </ul>
    </body>
</html>
